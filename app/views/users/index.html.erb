<main>
    <div class= "container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">
  <h2>User info</h2>
  <table class = "table">
    <tr>
      <th><%= image_tag @user.get_profile_image(100,100) %></th>
    </tr>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </table>
  <a class="btn btn-outline-secondary btn-block" href="<%= edit_user_path(current_user.id) %>">
    <i class="fas fa-user-cog"></i>
    </a>
   <!--<i class="fas fa-user-cog"></i>　レンチアイコン-->
  <%#= link_to "Edit", edit_user_path(@user.id) %>




 <h2>New book</h2>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>
</div>
<div class="col-md-8 offset-md-1">


<table class = "table">
   <thead>
   <tr>
   <th>image</th><th>name</th>
   </tr>
   
   

   <% @books.each do |book| %>
   <tr>
     <th>
      <%= image_tag book.user.get_profile_image(100,100) %>
     </th>
      <th><%= book.user.name %></th>
    <th><%= link_to "Show",user_path(book.user.id) %></th></tr>
   　
   <% end %>
   </thead>
  </table>
    </div>
   </div>
   </div>
  </main>